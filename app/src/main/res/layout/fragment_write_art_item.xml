<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_choose_art"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/edt_artName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:hint="@string/hint_art_name"
            android:inputType="text"
            android:lines="1"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@id/img_choose_art"
            app:layout_constraintStart_toStartOf="@id/img_choose_art"
            app:layout_constraintEnd_toEndOf="@id/img_choose_art" />

        <EditText
            android:id="@+id/edt_artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:hint="@string/hint_artist_name"
            android:inputType="text"
            android:lines="1"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@id/edt_artName"
            app:layout_constraintStart_toStartOf="@id/img_choose_art"
            app:layout_constraintEnd_toEndOf="@id/img_choose_art" />

        <EditText
            android:id="@+id/edt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:hint="@string/hint_year"
            android:inputType="text"
            android:lines="1"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@id/edt_artistName"
            app:layout_constraintStart_toStartOf="@id/img_choose_art"
            app:layout_constraintEnd_toEndOf="@id/img_choose_art" />

        <Button
            android:id="@+id/btn_save_item_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="30dp"
            android:text="@string/btn_save"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edt_year"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>